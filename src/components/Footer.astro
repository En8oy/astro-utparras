---
import BrandLogo from '@components/ui/logos/BrandLogo.astro'
import Image from '@components/ui/images/Image.astro'
import footerBanner from '@images/footer.png'
import { FooterLinks, SITE } from '@/config'
---

<footer class="w-full bg-neutral-300 dark:bg-neutral-900">
    <div class="mx-auto w-full max-w-[85rem] px-4 py-10 sm:px-6 lg:px-16 lg:pt-20 2xl:max-w-screen-2xl">
        <div class="grid grid-cols-2 sm:grid-cols-3 gap-6 md:grid-cols-5">
            <div class="col-span-full flex justify-center sm:grid sm:col-span-1">
                <BrandLogo class="h-auto w-28" />
            </div>
            {
                FooterLinks.map(section => (
                    <div class="col-span-1 text-center">
                        <h3 class="font-bold text-neutral-800 dark:text-neutral-200">
                            {section.section}
                        </h3>
                        <ul class="mt-3 grid space-y-3">
                                {section.links.map((link, _index) => (
                                        <li>
                                            <a
                                                href={link.url}
                                                class="inline-flex gap-x-2 rounded-lg text-neutral-600 outline-none ring-zinc-500 transition duration-300 hover:text-neutral-500 focus-visible:ring dark:text-neutral-400 dark:ring-zinc-200 dark:hover:text-neutral-300 dark:focus:outline-none"
                                            >
                                                {link.name}
                                            </a>
                                        </li>
                                ))}
                            </ul>
                    </div>
                ))
            }

            <div class="col-span-2 flex justify-center mt-10 md:mt-0">
                <div class="w-full max-w-[400px] h-[280px] hidden md:block">
                    <iframe 
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d4911.296671689218!2d-102.18190662460978!3d25.45311267754711!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x868f4944234037bb%3A0x95ba956433e7124c!2sUniversidad%20Tecnol%C3%B3gica%20Parras%20De%20La%20Fuente!5e1!3m2!1sen!2smx!4v1754188672982!5m2!1sen!2smx" 
                        width="100%" 
                        height="100%" 
                        style="border:0; border-radius: 12px;" 
                        allowfullscreen="" 
                        loading="lazy" 
                        referrerpolicy="no-referrer-when-downgrade"
                        title="Ubicación Universidad Tecnológica de Parras"
                        class="rounded-xl shadow-lg">
                    </iframe>
                </div>
            </div>
        </div>


        <div class="flex items-center text-center justify-center">
            <p class="text-sm text-neutral-600 dark:text-neutral-400">
                © <span id="current-year">2025</span> {SITE.title}
            </p>
        </div>
    </div>
</footer>
