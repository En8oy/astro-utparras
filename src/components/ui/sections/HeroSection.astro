---
import PrimaryCTA from '@components/ui/buttons/PrimaryCTA.astro'
import SecondaryCTA from '@components/ui/buttons/SecondaryCTA.astro'
import Image from '@components/ui/images/Image.astro'

const {
    title,
    subTitle,
    primaryBtn,
    primaryBtnURL,
    secondaryBtn,
    secondaryBtnURL,
    src,
    alt,
    compact = false,
    half = false,
    showButtons = true,
    showStats = true,
} = Astro.props

interface Props {
    title: string
    subTitle?: string
    primaryBtn?: string
    primaryBtnURL?: string
    secondaryBtn?: string
    secondaryBtnURL?: string
    src?: any
    alt?: string
    compact?: boolean
    half?: boolean
    showButtons?: boolean
    showStats?: boolean
}
---

<!-- Hero Section with Modern Design -->
<section class={`relative overflow-hidden bg-gradient-to-br from-neutral-100 via-neutral-50 to-neutral-100 dark:from-neutral-900 dark:via-neutral-800 dark:to-neutral-900 ${half ? 'min-h-[50vh]' : compact ? 'min-h-[60vh]' : 'min-h-screen'}`}>
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-20">
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(0,0,0,0.1) 1px, transparent 0); background-size: 40px 40px;" class="dark:hidden"></div>
        <div class="absolute inset-0 hidden dark:block" style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.1) 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>
    
    <!-- Background Image Overlay -->
    {src && (
        <div class="absolute inset-0">
            <Image
                src={src}
                alt={alt}
                class="h-full w-full object-cover opacity-20 dark:opacity-10"
                draggable="false"
                loading="eager"
                format="avif"
            />
        </div>
    )}
    
    <!-- Content Container -->
    <div class={`relative z-10 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 ${compact ? 'py-12 lg:py-16' : 'py-20'}`}>
        <div class="text-center">
            <h1 class="mb-6 text-4xl font-bold tracking-tight text-neutral-800 dark:text-white sm:text-5xl lg:text-6xl">
                <Fragment set:html={title} />
            </h1>
            
            {subTitle && (
                <p class="mx-auto mb-8 max-w-3xl text-lg leading-relaxed text-neutral-600 dark:text-neutral-300 lg:text-xl">
                    {subTitle}
                </p>
            )}

            {showButtons && (
                <div class="flex flex-col gap-4 sm:flex-row sm:justify-center">
                    {primaryBtn && (
                        <a href={primaryBtnURL} class="inline-flex items-center gap-2 rounded-lg bg-primary-500 px-6 py-3 text-sm font-semibold text-white shadow-lg transition-all hover:bg-primary-600 hover:shadow-xl hover:scale-105">
                            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                            </svg>
                            {primaryBtn}
                        </a>
                    )}
                    {secondaryBtn && (
                        <a href={secondaryBtnURL} class="inline-flex items-center gap-2 rounded-lg border border-neutral-600 bg-neutral-800/50 px-6 py-3 text-sm font-semibold text-neutral-300 backdrop-blur-sm transition-all hover:bg-neutral-700/50 hover:text-white">
                            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a1 1 0 001.414 0L21 7M5 12h14" />
                            </svg>
                            {secondaryBtn}
                        </a>
                    )}
                </div>
            )}
        </div>
        
        <!-- Bottom Stats -->
        {showStats && (
            <div class="mt-16 grid grid-cols-2 gap-6 text-center sm:grid-cols-4">
                <div>
                    <div class="text-3xl font-bold text-primary-500 dark:text-primary-400">5</div>
                    <div class="text-sm text-neutral-500 dark:text-neutral-400">Carreras</div>
                </div>
                <div>
                    <div class="text-3xl font-bold text-secondary-500 dark:text-secondary-400">2500+</div>
                    <div class="text-sm text-neutral-500 dark:text-neutral-400">Estudiantes</div>
                </div>
                <div>
                    <div class="text-3xl font-bold text-green-500 dark:text-green-400">95%</div>
                    <div class="text-sm text-neutral-500 dark:text-neutral-400">Empleabilidad</div>
                </div>
                <div>
                    <div class="text-3xl font-bold text-orange-500 dark:text-orange-400">20+</div>
                    <div class="text-sm text-neutral-500 dark:text-neutral-400">AÃ±os</div>
                </div>
            </div>
        )}
    </div>
    
    <!-- Gradient Overlay at Bottom -->
    <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-white dark:from-neutral-900 to-transparent"></div>
    
</section>
