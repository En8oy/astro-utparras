---
const { carrera } = Astro.props

interface Props {
    carrera: {
        id: string
        nombre: string
        abreviatura: string
        descripcion: string
        duracion: string
        modalidad: string
        icono: string
        color: string
        url: string
    }
}
---

<div class="max-w-3xl mx-auto">
    <div class="flex gap-x-4">
        <div class="relative -ml-2 last:after:hidden after:absolute after:top-20 after:bottom-0 after:start-10 after:w-px after:-translate-x-[0.5px] after:bg-gray-200 dark:after:bg-neutral-700 after:bg-neutral-400">
            <div class="relative z-10 size-20 flex justify-center items-center bg-white dark:bg-neutral-800 rounded-xl border-2 border-primary-200 dark:border-primary-700">
                <img src={carrera.icono} alt={carrera.abreviatura} class="size-16 object-contain" />
            </div>
        </div>
        <div class="grow pt-0.5 pb-8 group">
            <a
                href={carrera.url}
                data-astro-prefetch
                class="block outline-none ring-zinc-500 focus:outline-none focus-visible:ring focus-visible:ring-zinc-500 dark:ring-zinc-200 rounded-lg"
            >
                <div class="bg-white dark:bg-neutral-800 rounded-lg p-6 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 transition-all hover:shadow-lg">
                    <div class="flex justify-between items-start mb-3">
                        <div>
                            <h3 class="text-xl font-bold text-neutral-800 group-hover:text-primary-600 dark:text-neutral-200 dark:group-hover:text-primary-400">
                                {carrera.nombre}
                            </h3>
                            <span class="inline-block mt-1 px-2 py-1 text-xs font-semibold text-primary-700 bg-primary-100 dark:text-primary-300 dark:bg-primary-900 rounded">
                                {carrera.abreviatura}
                            </span>
                        </div>
                    </div>
                    <p class="text-base text-neutral-600 dark:text-neutral-400 mb-4">
                        {carrera.descripcion}
                    </p>
                    <div class="flex flex-wrap gap-4 text-sm">
                        <div class="flex items-center gap-2">
                            <svg class="w-4 h-4 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <span class="text-neutral-600 dark:text-neutral-400">Duración: <strong>{carrera.duracion}</strong></span>
                        </div>
                        <div class="flex items-center gap-2">
                            <svg class="w-4 h-4 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                            </svg>
                            <span class="text-neutral-600 dark:text-neutral-400">Modalidad: <strong>{carrera.modalidad}</strong></span>
                        </div>
                    </div>
                    <div class="mt-4 flex items-center text-primary-600 dark:text-primary-400 font-semibold">
                        <span>Ver más información</span>
                        <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>