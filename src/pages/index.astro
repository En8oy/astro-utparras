---
import BaseLayout from '@layouts/BaseLayout.astro'
import HeroSection from '@components/ui/sections/HeroSection.astro'
import CarreraIcon from '@components/CarreraIcon.astro'
import bannerImg from '/public/images/utparras/utp_banner.jpg'
---

<BaseLayout>
    <HeroSection
        title=`Universidad Tecnológica de <span class="text-primary-500 dark:text-primary-400">Parras</span>`
        subTitle="Formar profesionistas comprometidos, con habilidades, conocimiento y valores que contribuyan a las exigencias del ámbito laboral"
        primaryBtn="Pre-registro"
        primaryBtnURL="https://www.iaescolarweb.com/PreRegistros.aspx"
        secondaryBtn="Aula Virtual"
        secondaryBtnURL="https://aulavirtual.utparras.edu.mx/"
        src={bannerImg}
        alt="Universidad Tecnológica de Parras"
    />

    <section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full">
        <div class="mx-auto mb-10 max-w-2xl text-center lg:mb-14">
            <h2 class="text-3xl font-bold text-neutral-800 dark:text-neutral-200 md:text-4xl md:leading-tight">
                Nuestros Programas Educativos
            </h2>
            <p class="mt-1 text-pretty text-neutral-600 dark:text-neutral-400">
                Ofrecemos carreras de ingeniería y licenciatura de alta calidad
            </p>
        </div>
        
        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
            <a href="/carreras/agricultura" class="group rounded-xl border border-neutral-200 bg-white p-6 hover:bg-neutral-50 dark:border-neutral-700 dark:bg-neutral-800 dark:hover:bg-neutral-700 transition-all hover:scale-105 hover:shadow-lg">
                <div class="mb-4 flex h-16 w-16 items-center justify-center">
                    <CarreraIcon carrera="agricultura" size="64px" />
                </div>
                <h3 class="mb-2 text-lg font-semibold text-neutral-800 dark:text-neutral-200 group-hover:text-primary-600 dark:group-hover:text-primary-400">
                    Ingeniería en Agricultura Sustentable y Protegida
                </h3>
                <p class="text-sm text-neutral-600 dark:text-neutral-400">
                    Forma profesionales capaces de implementar tecnologías innovadoras en la producción agrícola sustentable.
                </p>
                <div class="mt-4 inline-flex items-center gap-2 text-sm font-medium text-primary-600 dark:text-primary-400">
                    Ver más información
                    <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </div>
            </a>

            <a href="/carreras/ti" class="group rounded-xl border border-neutral-200 bg-white p-6 hover:bg-neutral-50 dark:border-neutral-700 dark:bg-neutral-800 dark:hover:bg-neutral-700 transition-all hover:scale-105 hover:shadow-lg">
                <div class="mb-4 flex h-16 w-16 items-center justify-center">
                    <CarreraIcon carrera="ti" size="64px" />
                </div>
                <h3 class="mb-2 text-lg font-semibold text-neutral-800 dark:text-neutral-200 group-hover:text-primary-600 dark:group-hover:text-primary-400">
                    Ingeniería en Tecnologías de la Información e Innovación Digital
                </h3>
                <p class="text-sm text-neutral-600 dark:text-neutral-400">
                    Desarrolla profesionales especializados en soluciones tecnológicas y transformación digital.
                </p>
                <div class="mt-4 inline-flex items-center gap-2 text-sm font-medium text-primary-600 dark:text-primary-400">
                    Ver más información
                    <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </div>
            </a>

            <a href="/carreras/industrial" class="group rounded-xl border border-neutral-200 bg-white p-6 hover:bg-neutral-50 dark:border-neutral-700 dark:bg-neutral-800 dark:hover:bg-neutral-700 transition-all hover:scale-105 hover:shadow-lg">
                <div class="mb-4 flex h-16 w-16 items-center justify-center">
                    <CarreraIcon carrera="industrial" size="64px" />
                </div>
                <h3 class="mb-2 text-lg font-semibold text-neutral-800 dark:text-neutral-200 group-hover:text-primary-600 dark:group-hover:text-primary-400">
                    Ingeniería Industrial
                </h3>
                <p class="text-sm text-neutral-600 dark:text-neutral-400">
                    Forma ingenieros capaces de optimizar procesos productivos y mejorar la eficiencia organizacional.
                </p>
                <div class="mt-4 inline-flex items-center gap-2 text-sm font-medium text-primary-600 dark:text-primary-400">
                    Ver más información
                    <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </div>
            </a>

            <a href="/carreras/negocios" class="group rounded-xl border border-neutral-200 bg-white p-6 hover:bg-neutral-50 dark:border-neutral-700 dark:bg-neutral-800 dark:hover:bg-neutral-700 transition-all hover:scale-105 hover:shadow-lg">
                <div class="mb-4 flex h-16 w-16 items-center justify-center">
                    <CarreraIcon carrera="negocios" size="64px" />
                </div>
                <h3 class="mb-2 text-lg font-semibold text-neutral-800 dark:text-neutral-200 group-hover:text-primary-600 dark:group-hover:text-primary-400">
                    Licenciatura en Negocios y Mercadotecnia
                </h3>
                <p class="text-sm text-neutral-600 dark:text-neutral-400">
                    Prepara profesionales en estrategias de negocio, marketing digital y gestión empresarial.
                </p>
                <div class="mt-4 inline-flex items-center gap-2 text-sm font-medium text-primary-600 dark:text-primary-400">
                    Ver más información
                    <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </div>
            </a>

            <a href="/carreras/turismo" class="group rounded-xl border border-neutral-200 bg-white p-6 hover:bg-neutral-50 dark:border-neutral-700 dark:bg-neutral-800 dark:hover:bg-neutral-700 transition-all hover:scale-105 hover:shadow-lg">
                <div class="mb-4 flex h-16 w-16 items-center justify-center">
                    <CarreraIcon carrera="turismo" size="64px" />
                </div>
                <h3 class="mb-2 text-lg font-semibold text-neutral-800 dark:text-neutral-200 group-hover:text-primary-600 dark:group-hover:text-primary-400">
                    Licenciatura en Gestión y Desarrollo Turístico
                </h3>
                <p class="text-sm text-neutral-600 dark:text-neutral-400">
                    Forma expertos en la industria turística con enfoque en desarrollo sustentable y gestión de destinos.
                </p>
                <div class="mt-4 inline-flex items-center gap-2 text-sm font-medium text-primary-600 dark:text-primary-400">
                    Ver más información
                    <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </div>
            </a>
        </div>
    </section>

    <section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full">
        <div class="grid gap-8 md:grid-cols-2 lg:gap-12">
            <div>
                <h2 class="mb-4 text-3xl font-bold text-neutral-800 dark:text-neutral-200 md:text-4xl">
                    Nuestra Misión
                </h2>
                <p class="text-lg text-neutral-600 dark:text-neutral-400">
                    Formar profesionistas comprometidos, con habilidades, conocimiento y valores que contribuyan a las exigencias del ámbito laboral.
                </p>
                <div class="mt-6">
                    <img src="/images/utparras/utp_imagen1.jpg" alt="Campus UT Parras" class="rounded-xl" />
                </div>
            </div>
            
            <div>
                <h2 class="mb-4 text-3xl font-bold text-neutral-800 dark:text-neutral-200 md:text-4xl">
                    Contacto
                </h2>
                <div class="space-y-4">
                    <div class="flex items-start space-x-3">
                        <svg class="mt-1 h-5 w-5 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        <div>
                            <p class="font-semibold text-neutral-800 dark:text-neutral-200">Dirección</p>
                            <p class="text-neutral-600 dark:text-neutral-400">
                                20 de Noviembre 100, José G. Madero<br>
                                27989 Parras de la Fuente, Coahuila
                            </p>
                        </div>
                    </div>
                    
                    <div class="flex items-start space-x-3">
                        <svg class="mt-1 h-5 w-5 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                        </svg>
                        <div>
                            <p class="font-semibold text-neutral-800 dark:text-neutral-200">Teléfono</p>
                            <p class="text-neutral-600 dark:text-neutral-400">842 422 3313</p>
                        </div>
                    </div>
                    
                    <div class="mt-6 flex space-x-4">
                        <a href="https://wa.me/528424223313" target="_blank" class="inline-flex items-center rounded-lg bg-primary-500 px-4 py-2 text-white hover:bg-primary-600">
                            <svg class="mr-2 h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.149-.67.149-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414-.074-.123-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                            </svg>
                            WhatsApp
                        </a>
                        <a href="https://www.facebook.com/utparras" target="_blank" class="inline-flex items-center rounded-lg bg-secondary-500 px-4 py-2 text-white hover:bg-secondary-600">
                            <svg class="mr-2 h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                            </svg>
                            Facebook
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
