---
import CarreraLayout from '@layouts/CarreraLayout.astro'
import PlanEstudiosTimeline from '@components/PlanEstudiosTimeline.astro'
import turismoImg from '/public/images/utparras/utp_imagen1.jpg'

const planEstudios = [
    {
        numero: 1,
        titulo: "Primer Cuatrimestre",
        materias: ["Inglés I", "Desarrollo Humano y Valores", "Fundamentos Matemáticos", "Administración", "Fundamentos de Turismo"],
        tipo: "tsu"
    },
    {
        numero: 2,
        titulo: "Segundo Cuatrimestre", 
        materias: ["Inglés II", "Geografía Turística", "Álgebra Lineal", "Contabilidad", "Hospitalidad"],
        tipo: "tsu"
    },
    {
        numero: 3,
        titulo: "Tercer Cuatrimestre",
        materias: ["Inglés III", "Patrimonio Cultural", "Probabilidad y Estadística", "Mercadotecnia", "Servicios Turísticos"],
        tipo: "tsu"
    },
    {
        numero: 4,
        titulo: "Cuarto Cuatrimestre",
        materias: ["Inglés IV", "Turismo Cultural", "Estadística Aplicada", "Gestión de Calidad", "Operación de Agencias"],
        tipo: "tsu"
    },
    {
        numero: 5,
        titulo: "Quinto Cuatrimestre",
        materias: ["Inglés V", "Turismo de Naturaleza", "Investigación de Mercados", "Planificación Turística", "Eventos y Convenciones"],
        tipo: "tsu"
    },
    {
        numero: 6,
        titulo: "Sexto Cuatrimestre",
        materias: ["Inglés VI", "Proyecto Integrador I", "Desarrollo de Productos Turísticos", "Emprendimiento", "Turismo Sustentable"],
        destacado: true,
        tipo: "tsu"
    },
    {
        numero: 7,
        titulo: "Séptimo Cuatrimestre",
        materias: ["Estadía Empresarial I"],
        tipo: "estadias"
    },
    {
        numero: 8,
        titulo: "Octavo Cuatrimestre",
        materias: ["Inglés VII", "Proyecto Integrador II", "Gestión de Destinos", "Marketing Digital Turístico", "Legislación Turística"],
        tipo: "continuacion"
    },
    {
        numero: 9,
        titulo: "Noveno Cuatrimestre",
        materias: ["Inglés VIII", "Proyecto Integrador III", "Innovación Turística", "Gestión Financiera", "Desarrollo Comunitario"],
        tipo: "continuacion"
    },
    {
        numero: 10,
        titulo: "Décimo Cuatrimestre",
        materias: ["Estadía Empresarial II"],
        destacado: true,
        tipo: "estadias"
    }
]
---

<CarreraLayout
    title="Licenciatura en Gestión y Desarrollo Turístico"
    descripcion="Forma profesionales capaces de innovar y comercializar servicios turísticos, promover competitividad y desarrollo comunitario, y diversificar la oferta turística."
    objetivo="Formar profesionales capaces de innovar y comercializar servicios turísticos, promover competitividad y desarrollo comunitario, y diversificar la oferta turística."
    perfilIngreso={[
        "Interés en turismo y hospitalidad",
        "Habilidades de comunicación",
        "Orientación al servicio",
        "Creatividad y emprendimiento",
        "Sensibilidad cultural"
    ]}
    perfilEgreso="Profesional preparado para gestionar el desarrollo del sector turístico considerando el emprendimiento a través del diseño de productos y servicios turísticos experienciales."
    campoLaboral={[
        "Gestión de servicios turísticos",
        "Desarrollo de productos turísticos",
        "Hospitalidad y hotelería",
        "Turismo cultural y de naturaleza",
        "Emprendimiento turístico",
        "Marketing turístico",
        "Consultoría en desarrollo turístico",
        "Guía especializada"
    ]}
    duracion="10 cuatrimestres (3 años 8 meses)"
    tituloTSU="Técnico Superior Universitario en Turismo"
    tituloFinal="Licenciatura en Gestión y Desarrollo Turístico"
    icono="/images/utparras/utp_icon_lgdt.png"
    heroImage={turismoImg}
    heroAlt="Estudiantes de Gestión y Desarrollo Turístico - Universidad Tecnológica de Parras"
    carrera="turismo"
>
    <div class="grid md:grid-cols-2 gap-6">
        <div class="bg-white dark:bg-neutral-800 rounded-lg p-6 border border-neutral-200 dark:border-neutral-700">
            <h3 class="text-lg font-bold text-neutral-800 dark:text-neutral-200 mb-4">
                Áreas de Especialización
            </h3>
            <ul class="space-y-2">
                <li class="flex items-center gap-2">
                    <div class="w-2 h-2 bg-primary-500 rounded-full"></div>
                    <span class="text-neutral-600 dark:text-neutral-400">Servicios Turísticos</span>
                </li>
                <li class="flex items-center gap-2">
                    <div class="w-2 h-2 bg-primary-500 rounded-full"></div>
                    <span class="text-neutral-600 dark:text-neutral-400">Hospitalidad</span>
                </li>
                <li class="flex items-center gap-2">
                    <div class="w-2 h-2 bg-primary-500 rounded-full"></div>
                    <span class="text-neutral-600 dark:text-neutral-400">Mercadotecnia Turística</span>
                </li>
                <li class="flex items-center gap-2">
                    <div class="w-2 h-2 bg-primary-500 rounded-full"></div>
                    <span class="text-neutral-600 dark:text-neutral-400">Gestión de Proyectos</span>
                </li>
                <li class="flex items-center gap-2">
                    <div class="w-2 h-2 bg-primary-500 rounded-full"></div>
                    <span class="text-neutral-600 dark:text-neutral-400">Turismo Cultural y de Naturaleza</span>
                </li>
                <li class="flex items-center gap-2">
                    <div class="w-2 h-2 bg-primary-500 rounded-full"></div>
                    <span class="text-neutral-600 dark:text-neutral-400">Desarrollo Sustentable</span>
                </li>
            </ul>
        </div>

        <div class="bg-white dark:bg-neutral-800 rounded-lg p-6 border border-neutral-200 dark:border-neutral-700">
            <h3 class="text-lg font-bold text-neutral-800 dark:text-neutral-200 mb-4">
                Formación Integral
            </h3>
            <ul class="space-y-2">
                <li class="flex items-center gap-2">
                    <div class="w-2 h-2 bg-secondary-500 rounded-full"></div>
                    <span class="text-neutral-600 dark:text-neutral-400">Desarrollo Humano</span>
                </li>
                <li class="flex items-center gap-2">
                    <div class="w-2 h-2 bg-secondary-500 rounded-full"></div>
                    <span class="text-neutral-600 dark:text-neutral-400">Administración</span>
                </li>
                <li class="flex items-center gap-2">
                    <div class="w-2 h-2 bg-secondary-500 rounded-full"></div>
                    <span class="text-neutral-600 dark:text-neutral-400">Emprendimiento</span>
                </li>
                <li class="flex items-center gap-2">
                    <div class="w-2 h-2 bg-secondary-500 rounded-full"></div>
                    <span class="text-neutral-600 dark:text-neutral-400">Matemáticas Aplicadas</span>
                </li>
                <li class="flex items-center gap-2">
                    <div class="w-2 h-2 bg-secondary-500 rounded-full"></div>
                    <span class="text-neutral-600 dark:text-neutral-400">Comunicación Efectiva</span>
                </li>
            </ul>
        </div>
    </div>

    <div class="mt-6 bg-primary-50 dark:bg-primary-900/20 rounded-lg p-6">
        <h3 class="text-lg font-bold text-neutral-800 dark:text-neutral-200 mb-3">
            Enfoque Innovador
        </h3>
        <div class="grid sm:grid-cols-3 gap-4">
            <div class="text-center p-4 bg-white dark:bg-neutral-800 rounded-lg">
                <svg class="w-8 h-8 text-primary-500 mx-auto mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <p class="font-semibold text-sm">Turismo Sustentable</p>
                <p class="text-xs text-neutral-600 dark:text-neutral-400">Perspectiva ecológica</p>
            </div>
            <div class="text-center p-4 bg-white dark:bg-neutral-800 rounded-lg">
                <svg class="w-8 h-8 text-primary-500 mx-auto mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                </svg>
                <p class="font-semibold text-sm">Emprendimiento</p>
                <p class="text-xs text-neutral-600 dark:text-neutral-400">Desarrollo de negocios</p>
            </div>
            <div class="text-center p-4 bg-white dark:bg-neutral-800 rounded-lg">
                <svg class="w-8 h-8 text-primary-500 mx-auto mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                <p class="font-semibold text-sm">Desarrollo Comunitario</p>
                <p class="text-xs text-neutral-600 dark:text-neutral-400">Impacto social positivo</p>
            </div>
        </div>
    </div>

    <PlanEstudiosTimeline planEstudios={planEstudios} />
</CarreraLayout>