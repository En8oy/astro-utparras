---
import BaseLayout from '@layouts/BaseLayout.astro'
import HeroSection from '@components/ui/sections/HeroSection.astro'
import PrimaryCTA from '@components/ui/buttons/PrimaryCTA.astro'
import SecondaryCTA from '@components/ui/buttons/SecondaryCTA.astro'
import CarreraIcon from '@components/CarreraIcon.astro'
import { SITE } from '@/config'

const { 
    title, 
    descripcion, 
    objetivo, 
    perfilIngreso, 
    perfilEgreso, 
    campoLaboral, 
    duracion,
    tituloTSU,
    tituloFinal,
    icono,
    heroImage,
    heroAlt,
    carrera
} = Astro.props
---

<BaseLayout title={`${title} | ${SITE.title}`}>
    <HeroSection
        title={title}
        subTitle={descripcion}
        src={heroImage}
        alt={heroAlt}
        half={true}
        showButtons={false}
        showStats={false}
    />
    
    <section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8">
        <!-- Info Bar -->
        <div class="max-w-4xl mx-auto">
            <div class="flex items-center justify-center gap-6 mb-8 bg-neutral-50 dark:bg-neutral-800 rounded-lg p-4">
                <span class="flex items-center gap-2 text-sm text-neutral-600 dark:text-neutral-400">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="font-medium">{duracion}</span>
                </span>
                <span class="flex items-center gap-2 text-sm text-neutral-600 dark:text-neutral-400">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                    <span class="font-medium">Modalidad Escolarizada</span>
                </span>
                <CarreraIcon carrera={carrera} size="32px" trigger="loop" />
            </div>

            <!-- Objetivo -->
            <div class="mb-10">
                <h2 class="text-2xl font-bold text-neutral-800 dark:text-neutral-200 mb-4 flex items-center gap-2">
                    <svg class="w-6 h-6 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    Objetivo General
                </h2>
                <p class="text-neutral-600 dark:text-neutral-400">
                    {objetivo}
                </p>
            </div>

            <!-- Perfiles -->
            <div class="grid md:grid-cols-2 gap-8 mb-10">
                <div class="bg-white dark:bg-neutral-800 rounded-lg p-6 border border-neutral-200 dark:border-neutral-700">
                    <h3 class="text-xl font-bold text-neutral-800 dark:text-neutral-200 mb-4 flex items-center gap-2">
                        <svg class="w-5 h-5 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
                        </svg>
                        Perfil de Ingreso
                    </h3>
                    <ul class="space-y-2">
                        {perfilIngreso.map((item: string) => (
                            <li class="flex items-start gap-2">
                                <svg class="w-4 h-4 text-primary-500 mt-1 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                                <span class="text-neutral-600 dark:text-neutral-400">{item}</span>
                            </li>
                        ))}
                    </ul>
                </div>

                <div class="bg-white dark:bg-neutral-800 rounded-lg p-6 border border-neutral-200 dark:border-neutral-700">
                    <h3 class="text-xl font-bold text-neutral-800 dark:text-neutral-200 mb-4 flex items-center gap-2">
                        <svg class="w-5 h-5 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                        </svg>
                        Perfil de Egreso
                    </h3>
                    <p class="text-neutral-600 dark:text-neutral-400">
                        {perfilEgreso}
                    </p>
                </div>
            </div>

            <!-- Campo Laboral -->
            <div class="mb-10">
                <h2 class="text-2xl font-bold text-neutral-800 dark:text-neutral-200 mb-4 flex items-center gap-2">
                    <svg class="w-6 h-6 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    Campo Laboral
                </h2>
                <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
                    {campoLaboral.map((campo: string) => (
                        <div class="bg-primary-50 dark:bg-primary-900/20 rounded-lg p-4 border border-primary-200 dark:border-primary-800">
                            <p class="text-neutral-700 dark:text-neutral-300">{campo}</p>
                        </div>
                    ))}
                </div>
            </div>

            <!-- Titulaci처n -->
            <div class="bg-primary-50 dark:bg-primary-900/20 rounded-xl p-8 mb-10">
                <h2 class="text-2xl font-bold text-neutral-800 dark:text-neutral-200 mb-6">
                    Doble Titulaci처n
                </h2>
                <div class="grid md:grid-cols-2 gap-6">
                    <div class="bg-white dark:bg-neutral-800 rounded-lg p-4">
                        <div class="flex items-center gap-2 mb-2">
                            <svg class="w-5 h-5 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                            </svg>
                            <span class="font-semibold text-neutral-700 dark:text-neutral-300">6째 Cuatrimestre</span>
                        </div>
                        <p class="text-sm text-neutral-600 dark:text-neutral-400">{tituloTSU}</p>
                    </div>
                    <div class="bg-white dark:bg-neutral-800 rounded-lg p-4">
                        <div class="flex items-center gap-2 mb-2">
                            <svg class="w-5 h-5 text-secondary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                            </svg>
                            <span class="font-semibold text-neutral-700 dark:text-neutral-300">10째 Cuatrimestre</span>
                        </div>
                        <p class="text-sm text-neutral-600 dark:text-neutral-400">{tituloFinal}</p>
                    </div>
                </div>
            </div>

            <!-- Plan de Estudios -->
            <div class="mb-10">
                <slot />
            </div>

            <!-- CTAs -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center mt-12">
                <PrimaryCTA title="Pre-registro" url="https://www.iaescolarweb.com/PreRegistros.aspx" />
                <SecondaryCTA title="Contactar" url="/contacto" />
            </div>
        </div>
    </section>
</BaseLayout>